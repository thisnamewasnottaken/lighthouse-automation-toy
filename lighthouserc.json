{
  "ci": {
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {      
          "offscreen-images": "off",
          "uses-webp-images": "off",
          "color-contrast": "off"
      }
    },
    "collect": {
      "method": "node",
      "additive": true,
      "headful": true,
      "numberOfRuns": 1,
      "puppeteerScript": "./preRunPuppeteer.js",
      "url": [
        "https://courses.w3schools.com/courses/accessibility-fundamentals"
      ],
      "settings": {
        "config-path": "./lighthouseConfig.js"
      }
    },
      
    "server": {
      "logLevel": "silent",
      "port": 9001,
      "storage": {
        "storageMethod": "sql",
        "sqlDialect": "sqlite",
        "sqlDatabasePath": "lhci.db"
      }
    }
  }
}